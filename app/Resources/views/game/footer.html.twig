{% for message in app.flashes('info') %}
    <div class="alert alert-info padding_2 text-medium text-center">
        <span>
            {{ message|raw }}
        </span>
    </div>
{% endfor %}
{% for message in app.flashes('success') %}
    <div class="alert alert-success padding_2 text-medium text-center">
        <span>
        {{ message|raw }}
        </span>
    </div>
{% endfor %}
{% for message in app.flashes('error') %}
    <div class="alert alert-danger padding_2 text-medium text-center">
        <span>
            {{ message|raw }}
        </span>
    </div>
{% endfor %}